<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.mmcalculator.UIPage">
    <VBox spacing="10" alignment="CENTER">
        <Label text="Sensitivity Converter by"/>
        <Label text="Monitor Distance Coefficient"/>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 0 20;">
            <TextField fx:id="fov1" promptText="FOV 1"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 0 20;">
            <TextField fx:id="fov2" promptText="FOV 2"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 0 20;">
            <TextField fx:id="monitorMatch" promptText="Horizontal Monitor Match (%)"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 0 20;">
            <TextField fx:id="sensitivity" promptText="Sensitivity"/>
        </HBox>
        <Button text="Calculate" onAction="#mmCalculator"/>
    </VBox>
</StackPane>
